<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <solid android:color="@color/player_progress_background_color" />
            <corners android:radius="1.5dp" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <solid android:color="@color/player_progress_secondary_color" />
                <corners android:radius="1.5dp" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="1.5dp" />
                <gradient
                    android:angle="180"
                    android:endColor="#7BD7FA"
                    android:startColor="#F3CEF8" />
            </shape>
        </clip>
    </item>
</layer-list>